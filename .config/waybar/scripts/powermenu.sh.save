#!/bin/bash

chosen=$(printf "ğŸ” Power Off\nâ» Reboot\nğŸ”’ Lock\nğŸ“´ Logout" | wofi --dmenu --width 200 --height 200 --style ~/.config/wofi/style.css)

case "$chosen" in
  "ğŸ” Neustart") systemctl reboot ;;
  "â» Herunterfahren") systemctl poweroff ;;
  "ğŸ”’ Sperren") loginctl lock-session ;;
  "ğŸ“´ Logout") hyprctl dispatch exit ;;
esac

choice=$(echo -e " ^o  Power Off\n ^`^~ Reboot\n ^t^b Logout\n ^`  Lock\n ^`^g Switch User" | wofi --dmenu --width=250 --height=200 --prompt="System Menu")

case "$choice" in
  " ^o  Power Off")
    systemctl poweroff
    ;;
  " ^`^~ Reboot")
    systemctl reboot
    ;;
  " ^t^b Logout")
    hyprctl dispatch exit
    ;;
  " ^`  Lock")
    loginctl lock-session
    ;;
  " ^`^g Switch User")
    dm-tool switch-to-greeter || gdmflexiserver || echo "Function not available"
    ;;
  *)
    ;;
esac

chmod +x /home/ruby/.config/waybar/scripts/powermenu.sh

